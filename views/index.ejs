<div class="author">
    <h1 class="author__heading">Hello, I'm Diego.</h1>
    <p class="author__body">Web Developer and Student</p>
</div>

<img src="img/apple.jpeg" alt="apple">
<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <!---Dummy data displayed until we incllud eposts later on-->
    <ul class="article-ul">
     
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                <span> <%- post.title %> </span>
                <span class="article-list__date">
                    <%= post.createdAt ? post.createdAt.toDateString() : 'No date' %>
                </span>
                </a>
            </li>
        <%}) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination-newpage">
            &lt; View Older Posts
        </a>
    <% } %>
    
  <!-- if prevPage is 1 then go to / -->
  <% if (prevPage >= 1) { %> <% if (prevPage === 1) { %>
    <a href="/" class="pagination-newer">View Newer Posts &gt;</a>
    <% } else { %>
    <a href="/?page=<%= prevPage %>" class="pagination-newer"
      >View Newer Posts &gt;</a
    >
    <% } %> <% } %>
</section>